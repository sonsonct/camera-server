{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      "**/**/*.ejs",
      {
        "include": "configs/**/*.yaml",
        "watchAssets": true
      },
      {
        "include": "configs/**/*.json",
        "watchAssets": true
      },
      {
        "include": "grpc/**/*.proto",
        "watchAssets": true
      },
      {
        "include": "public/**/*{.js,.css,.html}",
        "watchAssets": true
      },
      {
        "include": "assets",
        "watchAssets": true
      }
    ]
  }
}
